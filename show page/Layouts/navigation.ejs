<div class="backdrop"></div>
<header class="main-header">
    <button id="side-menu-toggle" style="position: absolute; margin-top: 1%;">Menu</button>
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item"><a class="<%= path === '/' ? 'active' : '' %>" href="/">Shop</a></li>
            <li class="main-header__item"><a class="<%= path === '/products' ? 'active' : '' %>" href="/products">Products</a></li>
            <% if (isAuthenticated) { %>
            <li class="main-header__item"><a class="<%= path === '/card' ? 'active' : '' %>" href="/card">card</a></li>
            <li class="main-header__item"><a class="<%= path === '/order' ? 'active' : '' %>" href="/order">Order</a></li>
            <li class="main-header__item"><a class="<%= path === '/admin/add-product' ? 'active' : '' %>" href="/admin/add-product">Add Products</a></li>
            <li class="main-header__item"><a class="<%= path === '/admin/products' ? 'active' : '' %>" href="/admin/products">Admin Product</a></li>
        <% } %>
        </ul>
        <ul class="main-header__item-list-right">
            <% if (!isAuthenticated) { %>
            <li class="main-header__item">
                <a href="/auth/login">Login</a>
                <input type="hidden" value= "<%= csrfToken %>">
            </li>
            <li class="main-header__item">
                <a href="/auth/SignUp">SignUp</a>
            </li>
            <% } else { %>
                <li class="main-header__item">
                    <form action="/auth/logout" method="post">
                        <button type="submit" id="logout" class="btn">Logout</button>
                    </form>
                </li>
            <% } %>
        </ul>
    </nav>

    <nav class="mobile-nav">
        <ul class="mobile-nav__item-list">
            <li class="mobile-nav__item">
                <a class="<%= path === '/' ? 'active' : '' %>" href="/">Shop</a>
            </li>
            <li class="mobile-nav__item">
                <a class="<%= path === '/products' ? 'active' : '' %>" href="/products">Products</a>
            </li>

                <li class="mobile-nav__item">
                    <a class="<%= path === '/card' ? 'active' : '' %>" href="/card">Card</a>
                </li>
                <li class="mobile-nav__item">
                    <a class="<%= path === '/order' ? 'active' : '' %>" href="/order">Orders</a>
                </li>
                <li class="mobile-nav__item">
                    <a class="<%= path === '/admin/add-product' ? 'active' : '' %>" href="/admin/add-product">Add Product
                    </a>
                </li>
                <li class="mobile-nav__item">
                    <a class="<%= path === '/admin/products' ? 'active' : '' %>" href="/admin/products">Admin Products
                    </a>
                </li>
                <li class="mobile-nav__item">
                    <a class="<%= path === '/login' ? 'active' : '' %>" href="/auth/login">Login</a>
                    <input type="hidden" name="_csrf" value= "<%= csrfToken %>">
                </li>
        </ul>
    </nav>
    <script src="/JS/main.js"></script>
</header>