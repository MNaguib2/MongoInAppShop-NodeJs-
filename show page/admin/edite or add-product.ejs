<%- include('../layouts/main-layout.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../layouts/navigation.ejs') %>

    <main>
        <form class="product-form" action="<% if (editing) { %> /admin/edite-product/<%= product.id %> <% } else { %> /admin/add-product <% } %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" <%if (editing) {%>value="<%= product.title %>" <% } %> required>
            </div>
            <div class="form-control">
                <label for="title">Image Url</label>
                <input type="text" name="imageurl" id="imageurl" <%if (editing) {%> value="<%= product.ImageURL %>" <% } %>"  required>
            </div>
            <div class="form-control">
                <label for="title">Price</label>
                <input type="number" step="0.01" name="price" <%if (editing) {%> value="<%= product.price %>" <% } %> id="price" required>
            </div>
            <div class="form-control">
                <label for="title">Description</label>
                <textarea type="text" name="description" id="description" required rows="5"><%if(editing){%><%=product.description%><%}%></textarea>
            </div>
            <button class="btn" type="submit"> <% if (editing) { %> Update Product <% } else { %> Add Product <% } %></button>
        </form>
    </main>
</body>
</html>