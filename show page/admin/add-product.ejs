<%- include('../layouts/main-layout.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../layouts/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/add-product" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" required>
            </div>
            <div class="form-control">
                <label for="title">Image Url</label>
                <input type="text" name="imageurl" id="imageurl" required>
            </div>
            <div class="form-control">
                <label for="title">Price</label>
                <input type="number" step="0.01" name="price" id="price" required>
            </div>
            <div class="form-control">
                <label for="title">Description</label>
                <textarea type="text" name="description" id="description" required rows="5"></textarea>
            </div>

            <button class="btn" type="submit" value="submit">Add Product</button>
        </form>
    </main>
</body>
</html>